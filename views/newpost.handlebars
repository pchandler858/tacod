<body class='bg-gray-100 brick'>
  <h1 class="space-mono font-bold text-slate-50 text-[2rem] py-0 px-4 rounded absolute top-4 left-4">TACO'D</h1>
  <div class='mt-4 min-h-screen flex items-center justify-center'>
    <div class='bg-white p-8 rounded-lg shadow-md max-w-md w-full opacity-90'>
      <h2 class='text-2xl font-bold mb-4'>Add Review</h2>
      <form class='new-post-form'>
        <div class='mb-4'>
          <label class='block font-bold mb-2'>Restaurant Name</label>
          <input
            type='text'
            id='shop-name'
            placeholder='Enter restaurant name'
            name='restaurant-name'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label class='block font-bold mb-2'>Type of Taco</label>
          <input
            type='text'
            id='taco-type'
            placeholder='Enter type of taco'
            name='taco-type'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label class='block font-bold mb-2'>Rating</label>
          <input
            type='number'
            id='rating'
            placeholder='Enter rating (1-10)'
            name='rating'
            min='1'
            max='10'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          />
        </div>
        <div class='mb-4'>
          <label class='block font-bold mb-2'>Comments</label>
          <textarea
            id='comments'
            placeholder='Enter your comments'
            name='comments'
            required
            class='w-full border border-gray-300 p-2 rounded-lg'
          ></textarea>
        </div>
        <button
          type='submit'
          class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
        >
          Add Review
        </button>
      </form>
      <div class='mt-4 text-sm text-gray-600'>
        <a href='/dashboard' class='text-blue-500'>Back to Dashboard</a>
      </div>
    </div>
  </div>
</body>
<script src='/js/newPosts.js'></script>